pipeline{
    agent any
    environment{
        NAME= "Savith"
    }
    stages{
        stage('Build'){
            steps{
                echo "Building Using WS02 Integrator"
                echo "Fetch the source code from the directory path specified by the environment variable"
                echo "Compile the code and generate any necessary artefacts"
            }
        }
stage('Unit and Integration Tests'){
    steps{
        echo "Unit tests"
        echo "Integration tests"
        echo "Testing using SonarQube"
    }
    post{
        success {
            emailext(
                to: "mudunkotuwasavith@gmail.com",
                subject: "SUCCESS: Unit and Integration Tests",
                body: "The Unit and Integration tests success! See attached logs.",
                attachmentsPattern: "**/target/*.log"
            )
        }
        failure {
            emailext(
                to: "mudunkotuwasavith@gmail.com",
                subject: "FAILURE: Unit and Integration Tests",
                body: "The Unit and Integration tests failed! See attached logs.",
                attachmentsPattern: "**/target/*.log"
            )
        }
    }
}

        stage('Code Analysis'){
            steps{
                echo "Check the quality of the code"
                echo  "Compile the code and generate any necessary artefacts"
            }
        }
        stage('Security Scan'){
            steps{
                echo "Deploy the application to a testing environment specified by the environment variable"
                echo "Integration tests"
            }
            post{
                success {
                    emailext(
                        to: "mudunkotuwasavith@gmail.com",
                        subject: "SUCCESS: Security Scan",
                        body: "The Security Scan was a success! See attached logs.",
                        attachmentsPattern: "**/target/*.log"
                    )
                }
                failure {
                    emailext(
                        to: "mudunkotuwasavith@gmail.com",
                        subject: "FAILURE: Security Scan",
                        body: "The Security Scan failed! See attached logs.",
                        attachmentsPattern: "**/target/*.log"
                    )
                }
    }
        }
        stage('Deploy to Staging'){
            steps{
                echo "Deploy the application to a testing environment specified by the environment variable"
                echo "Integration tests"
            }
        }
        stage('Integration Tests on Staging'){
            steps{
                sleep 10
            }
        }
        stage ('Deploy to Production'){
            steps{
                echo "$NAME has successfully deployed their code"
            }
        }
    }
}
